<div class="container top-padding">
<h1>Show user</h1>
	<br/><br/>
	<div class='span5 well'>
  	<h3>User Information:</h3>
	<p><strong>First Name: </strong><%= @user.first_name %></p>
	<p><strong>Last Name: </strong><%= @user.last_name %></p>
	<p><strong>Role(s): </strong><%= @user.get_roles %></p>
	<p><strong>Date of Birth: </strong><%= @user.date_of_birth %></p>
	<p><strong>Current School: </strong><%= @user.current_school %></p>
	<p><strong>Current Grade: </strong><%= @user.current_grade %></p>
	<p><strong>Email: </strong><%= @user.email %></p>
	<p><strong>Address: </strong><%= @user.address %></p>
	<p><strong>City: </strong><%= @user.city %></p>
	<p><strong>State: </strong><%= @user.state %></p>
	<p><strong>Zip Code: </strong><%= @user.zip_code %></p>
	<p><strong>Country: </strong><%= @user.country %></p>
	<p><strong>Country Code: </strong><%= @user.country_code %></p>
	<p><strong>Telephone: </strong><%= @user.telephone %></p>
	</div>
	<div class='span5 well'>
	<h3>Parent Information (If Student):</h3>
	<p><strong>Parent First Name: </strong><%= @user.parent_first_name %></p>
	<p><strong>Parent Last Name: </strong><%= @user.parent_last_name %></p>
	<p><strong>Parent Cellphone: </strong><%= @user.parent_cell_phone %></p>
	<p><strong>Parent Email: </strong><%= @user.parent_email %></p>
	<p><strong>Parent Receive Email Notifications?: </strong><%= @user.parent_email_notifications ? 'Yes' : 'No' %></p>
	<p><strong>Parent Receive Text Notifications?: </strong><%= @user.parent_text_notifications ? 'Yes' : 'No' %></p>
	</div>
<div class='span12'>	
<%= link_to 'Back', users_path %> | 
<%= link_to 'Edit', edit_user_path(@user) %>
</div>
</div>
