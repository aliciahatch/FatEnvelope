<div class="container top-padding">
	<div class="pull-right">
		<a href="/users" class="btn">Users</a>
		<a href="/appointments/all" class="btn">Appointments</a>
		<a href="/bootcamps" class="btn disabled">Bootcamps</a>
	</div>
<h1>Bootcamps</h1>

<br />
<br />
<table class="table table-bordered table-condensed">
	<tr>
		<th>Bootcamp date</th>
		<th></th>
	</tr>

	<% @bootcamps.each do |bootcamp| %>
	<tr>
		<td><%= bootcamp.date_formatted %></td>
		<td><%= link_to raw('<i class="icon-trash"></i>'), bootcamp, confirm: 'Are you sure?', method: :delete %></td>
	</tr>
	<% end %>
</table>

<br />

<%= link_to 'New Bootcamp', new_bootcamp_path %>

</div>