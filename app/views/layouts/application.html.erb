<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Fat Envelope" %></title>
    <meta name="description" content="">
    <meta name="author" content="">
    
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= stylesheet_link_tag "bootstrap_and_overrides.css" %>
    <%= stylesheet_link_tag "marketing.css" %>        
    <%= javascript_include_tag "//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js" %> 
    <%= javascript_include_tag "//js.stripe.com/v1/", "application" %>
    
    <%= csrf_meta_tags %>
    <%= tag :meta, :name => "stripe-key", :content => STRIPE_PUBLIC_KEY %>    
    <%= yield :dynamic_css %>
    <%= yield(:head) %>

  </head>
  <body class="<%if user_signed_in? %>app<%end%>">
    <div id="fb-root"></div>
    <script>(function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=210069412372115";
      fjs.parentNode.insertBefore(js, fjs);
  }(document, 'script', 'facebook-jssdk'));</script>    
    
    
    <div class="mobile-menu">
      <div class="tile" data-url="<%= root_url %>">
        <%= image_tag 'logo_invert.png' %>
      </div>
      
      <div class="tile _essay" data-url="<%=essaysystem_path%>">
        Essay System
      </div>
      
      <div class="tile _price" data-url="<%=programcosts_path%>">
        Programs &amp; Pricing
      </div>
      
      <div class="tile _bootcamp" data-url="<%=advisors_path%>">
        Bootcamp
      </div>
      
      <div class="tile _faq" data-url="<%=faq_path%>">
        FAQ
      </div>
      
      <div class="tile _about" data-url="<%=about_path%>">
        About Us
      </div>                                    
    </div>

    <% if controller.controller_name == 'marketing' %>
    <header class="navbar">	
      <div class="background-text">
        <div class="say-hello">
          <%= image_tag 'say-hello.png' %>
        </div>

        <div class="stand-out">
          <%= image_tag 'stand-out.png' %>
        </div>

        <div class="power-story">
          <%= image_tag 'what-power-story.png' %>
        </div>

        <div class="find-hook">
          <%= image_tag 'find-hook.png' %>
        </div>
      </div>

      <div class="background-images">
        <%= image_tag 'background-red.jpg' %>
        <%= image_tag 'background-blue.jpg' %> 
        <%= image_tag 'background-tan.jpg' %>        
        <%= image_tag 'background-green.jpg' %>                 
      </div>
      <nav class="navbar-inner">
        <div class="container">
          <%= render 'layouts/navigation' %>
        </div>
      </nav>
    </header>
 	<div>
	    <!-- p class="video-blue-over">What does it feel like to receive a Fat Envelope?</p -->

	    <p class="video-red-over">Get your Fat Envelope</p>    

	    <video id="video-blue" preload="metadata" style="display: none;" controls="controls" width="525" height="400">
	      <source src="/video/acceptance2.mp4" type="video/mp4">
	    </video>

	    <video id="video-red" preload="metadata" style="display: none;" controls="controls" width="525" height="400">
	      <source src="/video/acceptance1.mp4" type="video/mp4">
	    </video>
	  </div>
	<% else %>
		<div class="navbar menu">
			<nav class="navbar-inner">
		        <div class="container" style="margin-top:26px;">
		          <%= render 'layouts/menu' %>
		        </div>
		      </nav>
		</div>	
	<% end %>
    <div id="main" role="main">
      
      
      <% if @current_controller != "marketing" %>
      	<div class="page_container">
      <%end%>       

              <%= render 'layouts/messages' %>
              <%= yield %>
       <% if !current_page?(root_url) %>
       			</div>
          </div>
      <% if @current_controller != "marketing" %>
      	</div>
      <%end%>        
  
          
        </div>

       
       </div> <!--! end of .container --> <%end%>              
    </div> <!--! end of #main -->
  </body>
      
  <%= javascript_include_tag    "application", :media => "all" %>
  <%= javascript_include_tag "marketing.js" %>
  <%= yield :dynamic_js %>  
  <script type="text/javascript" src="//assets.pinterest.com/js/pinit.js"></script>
</html>