              <li>
                <%= link_to new_subscription_path do %>
                  Current Plan: <span class="badge badge-success">Paid</span>
                <% end %> 
              </li>
              <% else %>
                <li>
                  <% link_to new_subscription_path, :title => "Some link" do %>
