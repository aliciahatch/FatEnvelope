<h1>My schools</h1>
<h5>Number Of Schools Purchased: <%= current_user.num_of_tokens %></h5>
<h5>Number Of Schools Selected: <%= current_user.schools.length %></h5>
<h5>Schools Left: <%= current_user.num_of_tokens - current_user.schools.length %></h5>

<table class="table table-bordered table-striped">
  <tr>
    <th>Name</th>
    <th>Admission deadline</th>
    <th>Program</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @schools.each do |school| %>
  <tr>
    <td><%= school.name %></td>
    <td><%= school.admission_deadline %></td>
    <td><%= school.program_id %></td>
    <td><%= link_to 'Show', school %></td>
    <td><%= link_to 'Edit', edit_school_path(school) %></td>
    <td><%= link_to 'Destroy', school, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

